
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal-shiftfix">
    <div class="container-fluid main-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="widget-container fluid-height clearfix">
                    <div class="form-group" style="margin-top:10px">
                        <div class="col-md-7" style="width:20%;margin-left:30%">
                            <input class="form-control" type="text" placeholder="请输入产品名称" id="name"></input>
                        </div>
                        <span class="input-group-btn" style="margin-right:10%"><button class="btn btn-default" type="button" onclick="sousuo()">搜索</button></span>
                    </div>
                    <div class="heading">
                        <i class="icon-table"></i>@Session["iname"] 盘点记录
                    </div>
                    <div class="widget-content padded clearfix">
                        <table class="table table-bordered table-striped" id="dataTable1">
                            <thead>
                                <tr>
                                    <th>
                                        盘点名称
                                    </th>
                                    <th>
                                        盘点产品
                                    </th>
                                    <th class="hidden-xs">
                                        最近入库数量
                                    </th>
                                    <th class="hidden-xs">
                                        最近出库数量
                                    </th>
                                    <th class="hidden-xs">
                                        库存数量
                                    </th>
                                    <th>
                                        盘点时间
                                    </th>
                                    <th>
                                        操作
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="tby"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $.ajax({
        url: "http://localhost:60847/api/KHZ/ShowCheck",
        type: "get",
        dataType: "json",
        data: {"mId":@Session["mid"]},
        success: function (data) {
            $(data).each(function () {
                var tr = "<tr>" +
                    "<td>" + this.InventoryName + "</td>" +
                    "<td>" + this.ProductName + "</td>" +
                    "<td>" + this.InNum + "</td>" +
                    "<td>" + this.OutNum + "</td>" +
                    "<td>" + this.ProductNum + "</td>" +
                    "<td>" + this.InventoryTime + "</td>" +
                    "<td class='actions'>" +
                    "<div class='action-buttons'>" +
                    "<a class='table-actions' href='#'><i class='icon-pencil'></i></a>" +
                    "</div>" +
                    "</td>" +
                    "</tr >";
                $("#tby").append(tr);
            })
        }
    })

    function sousuo() {
        $("#tby").empty();
        $.ajax({
            url: "http://localhost:60847/api/KHZ/ShowCheck",
            type: "get",
            dataType: "json",
            data: { "mId":@Session["mid"], "pName": $("#name").val() },
            success: function (data) {
                $(data).each(function () {
                    var tr = "<tr>" +
                        "<td>" + this.InventoryName + "</td>" +
                        "<td>" + this.ProductName + "</td>" +
                        "<td>" + this.InNum + "</td>" +
                        "<td>" + this.OutNum + "</td>" +
                        "<td>" + this.ProductNum + "</td>" +
                        "<td>" + this.InventoryTime + "</td>" +
                        "<td class='actions'>" +
                        "<div class='action-buttons'>" +
                        "<a class='table-actions' href='#'><i class='icon-pencil'></i></a>" +
                        "</div>" +
                        "</td>" +
                        "</tr >";
                    $("#tby").append(tr);
                })
            }
        })
    }
</script>