<div id="demo7"></div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/layui-v2.4.5/layui/layui.js"></script>
<script>
    layui.use(['laypage', 'layer'], function ()
    {
        var laypage = layui.laypage
            , layer = layui.layer;
        $("#G_xian").empty();// 清空TBODY的内容，重新加载
        $.ajax({
            url: "http://localhost:60847/api/SHJ/ProductGet",
            type: 'get',
            dataType: 'text',
            success: function (data)
            {
                //调用分页
                laypage.render({
                    elem: 'demo7'
                    , count: data.length
                    , layout: ['count', 'prev', 'page', 'next', 'refresh', 'skip']
                    , limit: 5
                    , jump: function (obj)
                    {
                        //模拟渲染
                        document.getElementById('G_xian').innerHTML = function ()
                        {
                            var arr = []
                                , thisData = data.concat().splice(obj.curr * obj.limit - obj.limit, obj.limit);
                            layui.each(thisData, function (index, item)
                            {
                                arr.push('<tr><td>' + item.Id + '</td><td>' + item.ProductName + '</td><td>' + item.Quantity + '</td><td>' + item.Id + '</td><td>' + item.Id + '</td></tr>');
                            });
                            return arr.join('');
                        }();
                    }
                });
            }
        })
    });
</script>

